			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;	
			
			<a href="#">Home</a>&nbsp;|&nbsp;
   		<a href="#">Sitemap</a>&nbsp;|&nbsp;
   		<a href="#">RSS Feed</a> 			
			</p>
			
		</div>	
			
<!-- END Wrap -->
</div>
			<div id="alert_wrapper">
				<div id="alert">
					
				</div>
			</div>
	</g:HTMLPanel>
	</g:ScrollPanel>

</ui:UiBinder> 